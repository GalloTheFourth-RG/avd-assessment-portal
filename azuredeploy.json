{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "AVD Assessment Portal â€” One-click deployment. Creates Container App, Storage, Managed Identity, and assigns Reader + Cost Management Reader + Log Analytics Reader on the current subscription."
  },
  "parameters": {
    "namePrefix": {
      "type": "string",
      "defaultValue": "avdassess",
      "minLength": 3,
      "maxLength": 12,
      "metadata": {
        "description": "Name prefix for all resources (lowercase, no spaces). Must be globally unique for Storage Account."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources."
      }
    },
    "assignReaderOnSubscription": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Assign Reader, Cost Management Reader, and Log Analytics Reader to the managed identity on this subscription. Requires Owner or User Access Administrator role."
      }
    }
  },
  "variables": {
    "identityName": "[concat(parameters('namePrefix'), '-identity')]",
    "storageName": "[concat(parameters('namePrefix'), 'store')]",
    "logAnalyticsName": "[concat(parameters('namePrefix'), '-logs')]",
    "envName": "[concat(parameters('namePrefix'), '-env')]",
    "appName": "[concat(parameters('namePrefix'), '-portal')]",
    "storageBlobDataContributorRole": "ba92f5b4-2d11-453d-a403-e96b0029c9fe",
    "readerRole": "acdd72a7-3385-48ef-bd42-f606fba81ae7",
    "costManagementReaderRole": "72fafb9e-0641-4937-9268-a91bfd8191a3",
    "logAnalyticsReaderRole": "73c42c96-874c-492b-b04d-ab87d138a893",
    "portalImage": "ghcr.io/gallothefourth-rg/avd-assessment-portal:latest"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('identityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageName')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": { "name": "Standard_LRS" },
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageName'), '/default/results')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageName'), 'default')]"
      ],
      "properties": { "publicAccess": "None" }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName')), variables('storageBlobDataContributorRole'))]",
      "scope": "[concat('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]"
      ],
      "properties": {
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))).principalId]",
        "principalType": "ServicePrincipal",
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('storageBlobDataContributorRole'))]"
      }
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": { "name": "PerGB2018" },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('envName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))).customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('appName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('envName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]": {}
        }
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('envName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3000,
            "transport": "http",
            "allowInsecure": false
          },
          "registries": [],
          "secrets": []
        },
        "template": {
          "containers": [
            {
              "name": "portal",
              "image": "[variables('portalImage')]",
              "resources": {
                "cpu": 1.0,
                "memory": "2Gi"
              },
              "env": [
                { "name": "AZURE_CLIENT_ID", "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))).clientId]" },
                { "name": "STORAGE_ACCOUNT_NAME", "value": "[variables('storageName')]" },
                { "name": "STORAGE_CONTAINER", "value": "results" }
              ]
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 3,
            "rules": [
              {
                "name": "http-rule",
                "http": {
                  "metadata": { "concurrentRequests": "10" }
                }
              }
            ]
          }
        }
      }
    },
    {
      "condition": "[parameters('assignReaderOnSubscription')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "assign-reader-role",
      "subscriptionId": "[subscription().subscriptionId]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "principalId": { "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))).principalId]" },
          "readerRole": { "value": "[variables('readerRole')]" },
          "costManagementReaderRole": { "value": "[variables('costManagementReaderRole')]" },
          "logAnalyticsReaderRole": { "value": "[variables('logAnalyticsReaderRole')]" }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "principalId": { "type": "string" },
            "readerRole": { "type": "string" },
            "costManagementReaderRole": { "type": "string" },
            "logAnalyticsReaderRole": { "type": "string" }
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(subscription().id, parameters('principalId'), parameters('readerRole'))]",
              "properties": {
                "principalId": "[parameters('principalId')]",
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', parameters('readerRole'))]"
              }
            },
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(subscription().id, parameters('principalId'), parameters('costManagementReaderRole'))]",
              "properties": {
                "principalId": "[parameters('principalId')]",
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', parameters('costManagementReaderRole'))]"
              }
            },
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(subscription().id, parameters('principalId'), parameters('logAnalyticsReaderRole'))]",
              "properties": {
                "principalId": "[parameters('principalId')]",
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', parameters('logAnalyticsReaderRole'))]"
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "portalUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', variables('appName'))).configuration.ingress.fqdn)]"
    },
    "managedIdentityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))).principalId]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageName')]"
    },
    "nextSteps": {
      "type": "string",
      "value": "Deployment complete! Open the portal URL above. To assess additional subscriptions, assign Reader + Cost Management Reader + Log Analytics Reader to the managed identity on those subscriptions."
    }
  }
}
